into the {body} of the default.hbs template --}}


<style>
    .map-description {
        display: inline-block;
        z-index: 10;
        max-width: 960px;
        font-size: 6rem;
        font-weight: 700;
        line-height: 1.1;
    }
    .post-card-tags,
    .post-card-meta,
    .post-card-excerpt {
        display: none;
    }
    .content-title-header {
        padding-top: 15px;
        padding-bottom: 0px;
        text-align: center;
        color: #fff;
    }
    .post-feed {
        padding-top: 10px !important;
    }
    .post-card-header {
        text-align: center;
    }
    .post-card-title {
        font-size: 2em;
        color: var(--color-midgrey) !important;
    }
    .post-card-image-link {
        margin-bottom: 5px !important;
    }
    /* Map header container positioning */
    .map-header-container {
        position: relative;
    }
    /* Gradient fade for the map image */
    .map-gradient-fade {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 200px;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, #151719 100%);
        z-index: 100;
        pointer-events: none;
    }

    /* blockquote */
    .map-quote-block {
        position: relative;
        left: 50%;
        width: 100vw;
        max-width: 100vw;           /* never shrink below viewport */
        transform: translateX(-50%);
        box-sizing: border-box;
        padding: 60px 20px;         /* more padding so big quotes have room */
        margin: 40px 0;
        background-color: var(--ghost-accent-color);
        color: white;               /* ensure text is readable on accent bg */
        font-size: 2rem;
        line-height: 1.6;
        font-style: italic;
        text-align: center;
        overflow: hidden;           /* clip anything that goes outside */
    }
    .map-quote-block p {
        position: relative;         /* bring above pseudo-elements */
        z-index: 2;
        max-width: 800px;
        margin: 0 auto 0.5em;
        }
    .credit-quote-block {
        position: relative;         /* above pseudo-elements too */
        z-index: 2;
        text-align: right !important;
        font-size: 1.5em;
        font-weight: bold;
        font-style: normal;
        margin-top: 1rem;
        padding-bottom:
    }
    .map-quote-block::before {
        content: "“";               /* Unicode opening double-quote */
        position: absolute;
        top: 5px;                 /* nudge upward or adjust as needed */
        left: 20px;                 /* nudge inward from left edge */
        font-family: serif;         /* a classic serif for a dramatic look */
        font-size: 12rem;           /* very large */
        line-height: 1;
        color: rgba(255, 255, 255, 0.4); /* very low-opacity white */
        z-index: 1;                 /* sit behind the <p> text (which is z-index:2) */
        pointer-events: none;       /* never capture clicks */
    }

    .map-quote-block::after {
        content: "”";               /* Unicode closing double-quote */
        position: absolute;
        bottom: 20%;              /* slight nudge downward */
        right: 20px;                /* slight nudge inward from right edge */
        font-family: serif;
        font-size: 12rem;
        line-height: 1;
        color: rgba(255, 255, 255, 0.4);
        z-index: 1;
        pointer-events: none;
    }
</style>

<div class="site-header-content outer{{#match @custom.header_style "Left aligned"}} left-aligned{{/match}}{{#unless @custom.show_publication_cover}}{{#match @custom.header_style "Hidden"}} no-content{{/match}}{{/unless}}">

{{!-- Use responsive image from the Pyora map post --}}
{{#get "posts" filter="slug:pyora" limit="1"}}
  {{#foreach posts}}
    {{!-- 2) Now `this.feature_image` holds that post’s featured image URL --}}
    {{#if feature_image}}
     <img class="site-header-cover"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="100vw"
                src="{{img_url feature_image size="xl"}}"
                alt="Explore the world of Pyora"
    />
    <div class="site-header-inner inner">
        <p class="map-description"></p>
    </div>
    <div class="map-gradient-fade"></div>
    {{else}}
      <p>(Error: post context has no featured image.)</p>
    {{/if}}
  {{/foreach}}
{{/get}}

</div>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
<div class="inner posts">
    <div class="post-card-header"><h1 class="content-title-header">Explore Pyora</h1></div>
    <div class="post-feed">
        {{#foreach posts limit="3"}}
            {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            {{> "post-card"}}
        {{/foreach}}
    </div>

    {{!-- Quote block that spans full width --}}
    <div class="map-quote-block">
        <p id="quote-text">Even a blind dwarf navigator is worth more than ten sailors with a compass.</p>
        <p class="credit-quote-block"><a id="quote-link" href="https://lore.dungeon.church/doc/strezza-pvL6kQtaEA" target="_new"><span id="quote-author">Captain Strezza</span></a></p>
    </div>
    
    <div class="post-feed">
        {{#foreach posts from="4"}}
            {{> "post-card"}}
        {{/foreach}}
    </div>

</div>
</main>

{{!-- Script for random quotes - placed at the end of the body --}}
<script>
    // Define an array of quotes with their authors and links
    const quotes = [
        {
            text: "Even a blind dwarf navigator is worth more than ten sailors with a compass.",
            author: "Captain Strezza",
            link: "https://lore.dungeon.church/doc/strezza-pvL6kQtaEA"
        },
        {
            text: "The sea doesn't care about your plans. Neither do I.",
            author: "Captain Strezza",
            link: "https://lore.dungeon.church/doc/strezza-pvL6kQtaEA"
        },
        {
            text: "In Pyora, the land shapes the people as much as the people shape the land.",
            author: "Elder Thorne",
            link: "https://lore.dungeon.church/doc/elder-thorne"
        },
        {
            text: "Magic flows like water through the veins of our world. Some merely drink from it; others learn to redirect the current.",
            author: "Archmage Vellian",
            link: "https://lore.dungeon.church/doc/archmage-vellian"
        },
        {
            text: "The greatest treasures are not found in ancient tombs, but in the stories we tell about them.",
            author: "Bard Lysander",
            link: "https://lore.dungeon.church/doc/bard-lysander"
        }
    ];

    // Function to select a random quote
    function setRandomQuote() {
        // Select a random quote from the array
        const randomIndex = Math.floor(Math.random() * quotes.length);
        const selectedQuote = quotes[randomIndex];
        
        // Get the elements
        const quoteText = document.getElementById('quote-text');
        const quoteAuthor = document.getElementById('quote-author');
        const quoteLink = document.getElementById('quote-link');
        
        // Update the elements if they exist
        if (quoteText) quoteText.textContent = selectedQuote.text;
        if (quoteAuthor) quoteAuthor.textContent = selectedQuote.author;
        if (quoteLink) quoteLink.href = selectedQuote.link;
    }

    // Run the function when the DOM is fully loaded
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', setRandomQuote);
    } else {
        // DOM is already loaded, run the function directly
        setRandomQuote();
    }
</script>
