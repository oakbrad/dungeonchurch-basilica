{{!-- Map Block - A self-contained map component that can be dropped anywhere --}}
<div class="map-block" data-overlay="{{default overlay 'Sunset_Clouds_Squar_One.webm'}}" data-opacity="{{default opacity '1.0'}}">
    {{!-- Get the map post to use --}}
    {{#get "posts" filter="slug:{{default post_slug 'pyora'}}" limit="1"}}
        {{#foreach posts}}
            {{> "map" }}
        {{/foreach}}
    {{/get}}
</div>

<style>
    /* Map Block styling */
    .map-block {
        position: relative;
        left: 50%;
        width: 100vw;
        max-width: 100vw;
        transform: translateX(-50%);
        height: 500px;
        margin-bottom: 50px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
    
    /* Hide map data container */
    .map-block .map-data-container {
        display: none;
    }
    
    /* Responsive adjustments */
    @media (max-width: 768px) {
        .map-block {
            height: 400px;
        }
    }
</style>

