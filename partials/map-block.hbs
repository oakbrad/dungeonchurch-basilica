{{!-- Map Block Partial - Reusable map container with overlay support --}}

<style>
    /* Test map container */
    .map-block-container {
        position: relative;
        left: 50%;
        width: 100vw;
        max-width: 100vw;
        transform: translateX(-50%);
        height: 500px;
        margin-bottom: 50px;
        overflow-x: clip !important;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }
    .map-block-container .map-data-container {
        display: none;
        overflow: hidden !important;
    }
</style>

{{!-- Map container with configurable overlay and opacity --}}
<div class="map-block-container" data-overlay="{{#if overlay}}{{overlay}}{{/if}}" data-opacity="{{#if opacity}}{{opacity}}{{else}}1.0{{/if}}">
    {{!-- Get the specified map post to use --}}
    {{#if post}}
        {{!-- Use the passed post context directly --}}
        {{> "map" }}
    {{else}}
        {{!-- Default to Pyora map if no post is specified --}}
        {{#get "posts" filter="slug:pyora" limit="1"}}
            {{#foreach posts}}
                {{> "map" }}
            {{/foreach}}
        {{/get}}
    {{/if}}
    
    {{!-- Include any additional content passed to the partial --}}
    {{> @partial-block}}
</div>

