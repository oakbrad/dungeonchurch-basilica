{{!< default}}

<style>
    /* Remove site footer and content */
    .site-footer,
    .content-title,
    .post-full-footer,
    .post-content {
        display: none !important;
    }
    /* Match map style to Ghost */
    #map {
        background-color: var(--color-darkmode);
        flex: 1 !important;
        height: calc(100vh - 88px) !important;/* Adjust header height if needed */
        width: 100% !important;
        z-index: 1;
    }

    /* Embed mode styles - hide Ghost header and make map fullscreen */
    .embed-mode .gh-head {
        display: none !important;
    }
    
    .embed-mode #map {
        height: 100vh !important;
    }

    /* Styling for access message */
    .map-access-message {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: calc(100vh - 88px) !important;
        text-align: center;
        padding: 2rem;
        background: linear-gradient(to bottom right, #3f3f3f, var(--color-darkmode));
        color: #fff;
    }

    .map-access-message h1 {
        margin-bottom: 1rem;
        color: #fff;
    }

    .map-access-message p {
        font-size: 2rem;
        margin-bottom: 2rem;
        max-width: 600px;
    }

    .map-access-cta {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .map-signup-button,
    .map-signin-button,
    .map-upgrade-button {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        border-radius: 4px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .map-signup-button,
    .map-upgrade-button {
        background-color: var(--ghost-accent-color);
        color: #fff;
    }

    .map-signin-button {
        background-color: transparent;
        border: 1px solid #fff;
        color: #fff;
    }

    .map-signup-button:hover,
    .map-upgrade-button:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    .map-signin-button:hover {
        background-color: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
    }

    /* Mobile adjustments */
    @media only screen and (max-width: 768px) {
        .map-access-message h2 {
            font-size: 1.8rem;
        }

        .map-access-message p {
            font-size: 1rem;
        }

        .map-access-cta {
            flex-direction: column;
        }
        
        /* Mobile tooltip adjustments */
        .leaflet-tooltip {
            width: auto !important;

            padding: 6px 10px !important;
            white-space: normal !important;
        }
    }

    /* Map data container - hidden by default */
    .map-data-container {
        display: none;
    }
</style>

<!-- Add a class to the body to identify this as the custom-map template -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    document.body.classList.add('page-template-custom-map');
    
    // Check for embed mode and add class if needed
    if (window.location.search.indexOf('embed=true') !== -1) {
        document.body.classList.add('embed-mode');
    }
});
</script>

<!-- Script to check for embed parameter in URL -->
<script>
function getUrlParameter(name) {
    name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
    var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
    var results = regex.exec(location.search);
    return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
}

// Store the embed status in a global variable that can be accessed later
window.isEmbedMode = getUrlParameter('embed') === 'true';
</script>

{{!-- Debug information to check post data structure --}}
<div class="debug-info" style="display: none;">
    Post exists: {{#if post}}Yes{{else}}No{{/if}}<br>
    Visibility: {{post.visibility}}<br>
    Member exists: {{#if member}}Yes{{else}}No{{/if}}<br>
    Member paid: {{#if member.paid}}Yes{{else}}No{{/if}}
</div>

{{#post}}
    {{!-- Check if embed=true is in the URL first, otherwise use normal access logic --}}
    <script>
        if (window.location.search.indexOf('embed=true') !== -1) {
            // If embed=true, render the map directly
            document.write(`{{> "map"}}`);
        } else {
            // Otherwise, proceed with normal access logic
            {{#has visibility="public"}}
                document.write(`{{> "map"}}`);
            {{else}}
                {{#has visibility="members"}}
                    {{#if @member}}
                        document.write(`{{> "map"}}`);
                    {{else}}
                        document.write(`
                            <div class="map-access-message">
                                <h1>This map is available to members</h1>
                                <p>Sign up or log in to view this map.</p>
                                <div class="map-access-cta">
                                    <a href="#/portal/signup" class="map-signup-button">Sign up now</a>
                                    <a href="#/portal/signin" class="map-signin-button">Log in</a>
                                </div>
                            </div>
                        `);
                    {{/if}}
                {{else}}
                    {{#has visibility="paid"}}
                        {{#if @member.paid}}
                            document.write(`{{> "map"}}`);
                        {{else}}
                            document.write(`
                                <div class="map-access-message">
                                    <h1>This map is available to tithing members</h1>
                                    <p>Upgrade your membership to view this map.</p>
                                    <div class="map-access-cta">
                                        {{#if @member}}
                                            <a href="#/portal/account/plans" class="map-upgrade-button">Upgrade now</a>
                                        {{else}}
                                            <a href="#/portal/signup" class="map-signup-button">Sign up now</a>
                                            <a href="#/portal/signin" class="map-signin-button">Log in</a>
                                        {{/if}}
                                    </div>
                                </div>
                            `);
                        {{/if}}
                    {{!-- Fallback - just show it --}}
                    {{else}}
                        document.write(`{{> "map"}}`);
                    {{/has}}
                {{/has}}
            {{/has}}
        }
    </script>
{{/post}}
